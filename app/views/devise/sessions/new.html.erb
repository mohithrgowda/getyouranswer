<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <section class="vh-100">
    <div class="container py-5 h-100">
      <div class="row d-flex align-items-center justify-content-center h-100">
        <div class="col-md-8 col-lg-7 col-xl-6">
          <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
            class="img-fluid" alt="Phone image">
        </div>
        <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
          <form>
            <!-- Email input -->
            <div class="form-outline mb-4">
              <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control form-control-lg",id:"form1Example23" %>
              <%= f.label :email %>
            </div>

            <!-- Password input -->
            <div class="form-outline mb-4">
              <%= f.password_field :password, autocomplete: "current-password", class:"form-control form-control-lg",id:"form1Example23" %>
              <%= f.label :password %>
            </div>

            <div class="d-flex justify-content-around align-items-center mb-4">
              <!-- Checkbox -->
              <% if devise_mapping.rememberable? %>
                <div class="field">
                  <%= f.check_box :remember_me ,id:"form1Example3",class:"form-check-input"%>
                  <%= f.label :remember_me,class:"form-check-label" %>
                </div>
              <% end %>
            </div>

            <!-- Submit button -->
            <div class="d-flex justify-content-around align-items-center mb-4">
              <%= f.submit "Log in",class:"btn btn-primary btn-lg btn-block mb-4" %>
            </div>
             <div class="d-flex justify-content-around align-items-center mb-4">
                <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">   
                    <%= link_to "Forgot your password?", new_password_path(resource_name) %>
                  </div>
                <% end %>
             </div>
             <div class="divider d-flex align-items-center my-4">
                <p class="text-center fw-bold mx-3 mb-0 text-muted">OR</p>
             </div>
              <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                        <h4>Dont have an account?</h4>
              </div>
              <%= render "devise/shared/links" %>
            </div>
          </form>
          
        </div>
      </div>
    </div>
  </section>
<% end %>