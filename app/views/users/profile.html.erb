<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-2">
      <%= image_tag(@user.avatar,style:"width:150px;height:150px;border-radius:100%;") if @user.avatar.attached? %>
    </div>
     <div class="col-8">
          <h1><%= @user.name %></h1>
    </div>
  </div> 
</div>

<h1 class="row justify-content-md-center mt-4">My Questions</h1>
<% @questions.each do |question| %>
  <%= render 'questions/question',question: question  %>
<% end %>

<h1 class="row justify-content-md-center mt-4">My Answers</h1>
<% @answers.each do |answer| %>
<h3>for:<%= answer.question.description %></h3>
  <div class="answer-<%= answer.id %> container"
      style="border: 1px solid black; padding: 1em; margin: 1em;">
    <%= answer.user.name %><br />
    <span>Posted <%= time_ago_in_words(answer.created_at) %></span>
    <hr />
    <%= answer.body %>
  </div>
<% end %>