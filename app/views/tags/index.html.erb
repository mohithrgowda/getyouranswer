<h1 class="text-center mt-4">Tags</h1>

<div class="flickr_pagination">
  <%= will_paginate @categories, :container => false %>
</div>

<div class="container">
  <% @tags.each do |tag| %>
  <div class="row justify-content-md-center">
    <div class="col-4 mt-4">
      <div class="card text-center shadow mb-5 bg-white rounded">
        <div class="card-body">
          <h5 class="card-title">
            <%= link_to "#{tag.name}", tag_path(tag), class: "text-success
            display-4 text-decoration-none" %>
          </h5>
        </div>
        <div class="card-footer text-muted">
          <small
            >Posted <%= time_ago_in_words(tag.created_at) %> ago, Last edited
            <%= time_ago_in_words(tag.updated_at) %> ago</small
          >
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>

<div class="flickr_pagination mb-4">
  <%= will_paginate @categories, :container => false %>
</div>
