<div class="container">
  <div class="justify-content-center">
    <div class="col-10">
      <%= form_with(model: question,class:"shadow p-3 mb-3 bg-info rounded",
      local:true) do |f| %> <% if question.errors.any? %>
      <div style="color: red">
        <h2>
          <%= pluralize(question.errors.count, "error") %> prohibited this
          question from being saved:
        </h2>

        <ul>
          <% question.errors.each do |error| %>
          <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>
      <div class="form-group row mb-3">
        <%= f.label :description, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_area :description, rows: 10, class: "form-control shadow
          rounded", placeholder: "Description of question" %>
        </div>
      </div>

      <div class="form-group row mb-3">
        <%= f.label :tag, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.collection_select(:tag_ids, Tag.all, :id, :name, 
          { prompt: "Make your selection from the list below (can be empty)"}, 
          { multiple: true, size: 4, class: "custom-select shadow rounded w-100" }) %>
        </div>
      </div>

      <div class="form-group now text-center">
        <%= f.submit class: "btn btn-primary btn-lg bg-info btn-outline-light"%>
      </div>

      <% end %>
    </div>
  </div>
</div>
