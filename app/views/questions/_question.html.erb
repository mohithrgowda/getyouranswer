<div class="row justify-content-md-center">
  <div class="col-8 mt-4">
    <div class="card text-center shadow mb-5 bg-white rounded">
      <div class="card-header font-italic">By <%= question.user.name %></div>
      <div class="card-body">
        <!-- <h5 class="card-title">
          <%= link_to question.description, question_path(question), class:
          "text-success" %>
        </h5> -->
        <h5 class="card-text">
          <%= truncate(question.description, length: 100) %>
        </h5>
        <%= link_to "Answer", question_path(question), class: "btn
        btn-outline-success" %> <%= link_to "Delete",question_path(question),
        data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class:
        "btn btn-outline-danger "%>
      </div>
      <div class="card-footer text-muted">
        <small
          >Created <%= time_ago_in_words(question.created_at) %> ago, edited <%=
          time_ago_in_words(question.updated_at) %> ago</small
        >
      </div>
    </div>
  </div>
</div>
