<div class="row justify-content-md-center">
  <div class="col-8 mt-4">
    <div class="card text-center shadow mb-5 bg-white rounded">
      <div class="card-header font-italic">
        By <%= link_to question.user.name,user_path(question.user),class:
        "text-decoration-none" %>
      </div>
      <div class="card-body">
        <!-- <h5 class="card-title">
            <%= link_to question.description, question_path(question), class:
            "text-success" %>
          </h5> -->
        <h5 class="card-text">
          <%= truncate(question.description, length: 100) %>
        </h5>
        <h6><%= pluralize(question.views,"view") %></h6>
        <% if question.tags.any? %>
        <div mt-2><%= render question.tags %></div>

        <% end %> <br />
        <%= link_to "Answer", question_path(question), class: "btn
        btn-outline-success" %> <%= link_to "Delete",question_path(question),
        data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class:
        "btn btn-outline-danger "%>
      </div>
      <div class="card-footer text-muted">
        <small>
          Posted <%= time_ago_in_words(question.created_at) %> ago
          <!-- Last edited <%= time_ago_in_words(question.updated_at) %> ago -->
        </small>
      </div>
    </div>
  </div>
</div>
